{
  "name": "helper-utility",
  "version": "0.0.0-development",
  "description": "helper utility",
  "main": "./lib/index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:jameswlane/helper-utility.git"
  },
  "keywords": [
    "utility"
  ],
  "bugs": {
    "url": "https://github.com/jameswlane/helper-utility/issues"
  },
  "homepage": "https://github.com/jameswlane/helper-utility#readme",
  "scripts": {
    "clean": "rimraf lib coverage",
    "commit": "git-cz",
    "commitmsg": "opt --in commit-msg --exec \"validate-commit-msg\"",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate",
    "coverage:report": "coveralls",
    "precommit": "lint-staged && opt --in pre-commit --exec \"yarn verify\"",
    "semantic-release": "semantic-release",
    "setup": "npm i -g npmvet david nsp depcheck types-checker commitizen semantic-release-cli all-contributors-cli",
    "test": "jest --coverage",
    "test:ci": "jest --maxWorkers=4",
    "test:coverage:ci": "jest --coverage --maxWorkers=4",
    "test:coverage:codecov": "codecov",
    "test:watch": "jest --watch",
    "ts:build": "tsc",
    "ts:watch": "tsc -w",
    "tslint": "tslint --config tslint.json --project tsconfig.json \"src/**/*.ts\"",
    "tslint:fix": "tslint --config tslint.json --project tsconfig.json --fix \"src/**/*.ts\"",
    "verify": "yarn verify:npmvet && yarn verify:david && yarn verify:nsp && yarn verify:tscheck && yarn tslint && yarn test",
    "verify:offline": "yarn verify:npmvet && yarn tslint && yarn test",
    "verify:ci": "yarn verify:npmvet && yarn verify:nsp && yarn tslint && yarn test:ci",
    "verify:check": "depcheck",
    "verify:david": "david",
    "verify:npmvet": "npmvet --renderer ci --strict",
    "verify:nsp": "nsp check --output summary",
    "verify:tscheck": "types-checker"
  },
  "files": [
    "lib/"
  ],
  "author": "James W. Lane",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "10.12.0",
    "all-contributors-cli": "5.4.1",
    "awesome-typescript-loader": "5.2.1",
    "codecov": "3.1.0",
    "commitizen": "3.0.4",
    "coveralls": "3.0.2",
    "cz-conventional-changelog": "2.1.0",
    "jest": "23.6.0",
    "lint-staged": "7.3.0",
    "opt-cli": "1.6.0",
    "rimraf": "2.6.2",
    "semantic-release": "15.10.5",
    "ts-jest": "23.10.4",
    "tslint": "5.11.0",
    "tslint-config-airbnb": "5.11.0",
    "typescript": "3.1.3",
    "validate-commit-msg": "2.14.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
